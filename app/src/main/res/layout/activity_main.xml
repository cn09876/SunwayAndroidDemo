<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <sw.ui.SwScrollView
        android:id="@+id/swsv"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:padding="20px">

        <FrameLayout
            android:background="@drawable/border2"
            android:padding="20px"
            android:layout_width="100px"
            android:layout_height="100px">
            <ImageView
                android:alpha="0.8"
                android:scaleType="fitXY"
                android:background="@drawable/border3"
                android:padding="20px"
                android:id="@+id/img_1"
                android:src="@drawable/aaa"
                android:layout_width="1024px"
                android:layout_height="768px"/>


        </FrameLayout>
    </sw.ui.SwScrollView>

    <sw.ui.SwTest
        android:layout_width="200px"
        android:layout_height="200px"
        android:layout_alignTop="@+id/bnt_v"
        android:layout_toRightOf="@+id/bnt_v"
        android:layout_toEndOf="@+id/bnt_v"
        android:layout_marginLeft="76dp"
        android:layout_marginStart="76dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="横"
        android:id="@+id/btn_h"
        android:layout_gravity="center_horizontal|top"
        android:layout_below="@+id/button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="186dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="竖"
        android:id="@+id/bnt_v"
        android:layout_alignTop="@+id/btn_h"
        android:layout_toRightOf="@+id/btn_h"
        android:layout_toEndOf="@+id/btn_h"
        android:layout_gravity="left|top"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="测试"
        android:id="@+id/button"
        android:layout_gravity="right|top"
        android:textStyle="bold"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

</RelativeLayout>
